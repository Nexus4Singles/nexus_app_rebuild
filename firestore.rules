rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =============================================
    // HELPER FUNCTIONS
    // =============================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isParticipant(participantIds) {
      return isAuthenticated() && request.auth.uid in participantIds;
    }

    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.isAdmin == true;
    }

    // Account disable flag lives on users/{uid}.
    // Canonical (preferred): account.disabled == true
    // Legacy compatibility: account.isDisabled == true
    function isDisabled(uid) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(uid)) &&
        (
          get(/databases/$(database)/documents/users/$(uid)).data.account.disabled == true ||
          get(/databases/$(database)/documents/users/$(uid)).data.account.isDisabled == true
        );
    }

    // Prevent privilege escalation: owners cannot change roles.
    // - On create: roles must be absent OR explicitly non-admin.
    // - On update: roles must not change.
    function ownerCanWriteUserDoc(userId) {
      return isOwner(userId) && (
        (
          !exists(/databases/$(database)/documents/users/$(userId)) &&
          (
            !("roles" in request.resource.data) ||
            request.resource.data.roles.isAdmin != true
          )
        )
        ||
        (
          exists(/databases/$(database)/documents/users/$(userId)) &&
          request.resource.data.roles == resource.data.roles
        )
      );
    }

    // Admins can only update moderation fields on users/{uid} docs.
    // This includes: dating verification + account disable controls.
    function adminCanUpdateModerationOnly() {
      let changed = request.resource.data.diff(resource.data).changedKeys();
      return changed.hasOnly([
        'dating.verificationStatus',
        'dating.verificationQueuedAt',
        'dating.verifiedAt',
        'dating.rejectedAt',
        'dating.verifiedBy',
        'dating.rejectionReason',

        // audit trail used by AdminReviewDetailScreen
        'dating.reviewedBy',
        'dating.reviewedAt',

        // account disable controls (canonical + legacy)
        'account.disabled',
        'account.disabledAt',
        'account.disabledBy',
        'account.disabledReason',
        'account.isDisabled'
      ]);
    }

    // =============================================
    // USERS COLLECTION
    // =============================================

    match /users/{userId} {

      // Read rules:
      // - Owner can always read their own doc (even if disabled).
      // - Admin can read any user doc.
      // - Normal authenticated users can read other users only if:
      //   * requester is NOT disabled
      //   * target user is NOT disabled
      allow read: if
        isOwner(userId) ||
        isAdmin() ||
        (
          isAuthenticated() &&
          !isDisabled(request.auth.uid) &&
          !isDisabled(userId)
        );

      // Write rules:
      // - Owner can create/update their doc, cannot change roles, and cannot write if disabled.
      // - Admin can update moderation fields only (verification + disable flags).
      allow create: if ownerCanWriteUserDoc(userId) && !isDisabled(userId);
      allow update: if
        (ownerCanWriteUserDoc(userId) && !isDisabled(userId)) ||
        (isAdmin() && adminCanUpdateModerationOnly());

      allow delete: if isOwner(userId) && !isDisabled(userId);

      // Nexus2 subcollection
      match /nexus2/{document=**} {
        allow read, write: if isOwner(userId) && !isDisabled(userId);
      }

      // Story progress subcollection
      match /storyProgress/{storyId} {
        allow read, write: if isOwner(userId) && !isDisabled(userId);
      }

      // Assessment history subcollection
      match /assessmentHistory/{assessmentId} {
        allow read, write: if isOwner(userId) && !isDisabled(userId);
      }
    }

    // =============================================
    // CHATS COLLECTION
    // =============================================

    match /chats/{chatId} {

      // Read-only access allowed even for disabled users (they can view old chats),
      // but all write operations remain blocked by the write rules below.
      allow read: if isAuthenticated() &&
        isParticipant(resource.data.participantIds);

      // Create:
      // - creator must be a participant
      // - creator must not be disabled
      // - AND no participant may be disabled (prevents "new chats with disabled profiles")
      allow create: if isAuthenticated() &&
        !isDisabled(request.auth.uid) &&
        request.auth.uid in request.resource.data.participantIds &&
        !isDisabled(request.resource.data.participantIds[0]) &&
        !isDisabled(request.resource.data.participantIds[1]);

      allow update: if isAuthenticated() &&
        !isDisabled(request.auth.uid) &&
        isParticipant(resource.data.participantIds);

      // Messages subcollection
      match /messages/{messageId} {

        // Read-only access allowed even for disabled users (view old threads).
        allow read: if isAuthenticated() &&
          isParticipant(get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds);

        // Only sender can create message, sender must not be disabled,
        // and receiver must not be disabled (prevents sending to disabled profiles).
        allow create: if isAuthenticated() &&
          !isDisabled(request.auth.uid) &&
          request.auth.uid == request.resource.data.senderId &&
          !isDisabled(request.resource.data.receiverId) &&
          isParticipant(get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds);

        // Only receiver can update (mark as read), receiver must not be disabled
        allow update: if isAuthenticated() &&
          !isDisabled(request.auth.uid) &&
          request.auth.uid == resource.data.receiverId;
      }
    }

    // =============================================
    // STORIES & POLLS (Read-only for users)
    // =============================================

    match /stories/{storyId} {
      allow read: if isAuthenticated() && !isDisabled(request.auth.uid);
      allow write: if false;
    }

    match /polls/{pollId} {
      allow read: if isAuthenticated() && !isDisabled(request.auth.uid);
      allow write: if false;
    }

    // =============================================
    // POLL VOTES
    // =============================================

    match /pollVotes/{pollId}/votes/{oderId} {
      allow read: if isOwner(oderId) && !isDisabled(oderId);
      allow create: if isOwner(oderId) && !isDisabled(oderId);
      allow update, delete: if false;
    }

    // =============================================
    // POLL AGGREGATES
    // =============================================

    match /pollAggregates/{pollId} {
      allow read: if isAuthenticated() && !isDisabled(request.auth.uid);
      allow write: if isAuthenticated() && !isDisabled(request.auth.uid);
    }

    // =============================================
    // APP CONFIG (Read-only)
    // =============================================

    match /config/{configId} {
      allow read: if isAuthenticated() && !isDisabled(request.auth.uid);
      allow write: if false;
    }

    // =============================================
    // ASSESSMENTS (Read-only catalog)
    // =============================================

    match /assessments/{assessmentId} {
      allow read: if isAuthenticated() && !isDisabled(request.auth.uid);
      allow write: if false;
    }
  }
}
