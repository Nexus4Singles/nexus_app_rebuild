source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '16.0'
use_modular_headers!

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('Flutter', 'Generated.xcconfig'), __dir__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. Run 'flutter pub get' first."
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end

  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}."
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper.rb'), flutter_root)

flutter_ios_podfile_setup

use_frameworks! :linkage => :static

target 'Runner' do
  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      config.build_settings['SWIFT_VERSION'] = '5.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
      config.build_settings['DEFINES_MODULE'] = 'YES'
    end
  end

  # ---- gRPC-Core + Xcode 26 clang parsing fix (basic_seq.h) ----
  grpc_header = File.join(installer.sandbox.root.to_s, 'gRPC-Core', 'src', 'core', 'lib', 'promise', 'detail', 'basic_seq.h')

  if File.exist?(grpc_header)
    contents = File.read(grpc_header)
    patched = contents.dup

    # Fix 1: CallSeqFactory needs explicit <>
    patched.gsub!(
      'Traits::template CallSeqFactory(',
      'Traits::template CallSeqFactory<>('
    )

    # Fix 2: clang regression requires forcing template-id parsing with parentheses
    patched.gsub!(
      'return Traits::template CheckResultAndRunNext<Wrapped>(',
      'return (Traits::template CheckResultAndRunNext<Wrapped>)('
    )

    if patched != contents
      File.write(grpc_header, patched)
      Pod::UI.puts "✅ Patched gRPC-Core basic_seq.h for Xcode 26 clang"
    else
      Pod::UI.puts "ℹ️ gRPC-Core basic_seq.h already patched"
    end
  else
    Pod::UI.puts "ℹ️ gRPC-Core header not found (no patch applied)"
  end
  
  # ---- Fix broken gRPC-Core.modulemap path (CocoaPods regeneration issue) ----
  grpc_modulemap_wrong = "${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap"
  grpc_modulemap_correct = "${PODS_ROOT}/Target Support Files/gRPC-Core/gRPC-Core.modulemap"

  Dir.glob(File.join(installer.sandbox.root.to_s, "Target Support Files", "**", "*.xcconfig")).each do |xcconfig_path|
    next unless File.exist?(xcconfig_path)

    xcconfig = File.read(xcconfig_path)
    next unless xcconfig.include?(grpc_modulemap_wrong)

    xcconfig.gsub!(grpc_modulemap_wrong, grpc_modulemap_correct)

    File.write(xcconfig_path, xcconfig)
    Pod::UI.puts "✅ Patched gRPC-Core.modulemap reference in #{File.basename(xcconfig_path)}"
  end

end